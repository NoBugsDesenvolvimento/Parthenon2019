<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.organizador.GerenciarAtividades"
    android:id="@+id/prog_container_adm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_atv_adm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:autofillHints=""
            android:background="@drawable/search_input"
            android:drawableStart="@drawable/ic_search_24dp"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="@string/search"
            android:inputType="textPersonName"
            android:padding="7dp"
            android:textColor="@color/colorPrimaryDarkParthenon"
            android:textColorHint="@color/colorPrimaryDarkParthenon"
            android:textSize="@dimen/normal_font_size"
            tools:ignore="LabelFor"
            tools:targetApi="o" />

        <FrameLayout
            android:id="@+id/btAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_add_circle"
            android:scaleX="1.5"
            android:scaleY="1.5">

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/atividades_adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>